#-*- coding: shift-jis -*-
#:kivy 1.10.1

# ベースアイテム
<ImageButton@ButtonBehavior+Image>:
    nocache: True
    anim_delay: -1
<ClickableLabel@ButtonBehavior+Label>:
    size_hint_x:None
    size: self.texture_size
    halign: 'left'
    font_size: '16sp'
<OptButton@Button>:
    size_hint_x: None
    width: 100
    background_color: 0.128, 0.128, 0.128, 1
<OptButtonT@ToggleButton>:
    size_hint_x: None
    width: 100
    background_color: 0.128, 0.128, 0.128, 1

<MyCheckBox@BoxLayout>:
    text: ''
    #size_hint: None, None
    #size: 150, 50
    size_hint: None, None
    height: 40
    width: self.minimum_width
    CheckBox:
        id: cb
        #color: 0, 0.4, 1.0, 1.0
        size_hint_x: None
        width: '32dp'
    ClickableLabel:
        on_press: cb._do_press()
        text: root.text
        
<ScrollStack@ScrollView>:
    StackLayout:
        id: fi
        orientation: 'lr-tb'
        #cols: 4
        size_hint_y: None
        height: self.minimum_height
        padding: 5
        spacing: 10

# DataBaseList用
<DBInfo@BoxLayout>:
    title:''
    data_num:''
    data_size:''

    is_selected:False

    orientation:'vertical'
    size_hint: None, None
    padding:5
    width: 150
    height: 80

    canvas.before:
        Color:
            rgba: [0.0,0.0,1.0,0.6] if root.is_selected else [0.5, 0.5, 0.5, 1]
        Rectangle:
            size: self.size
            pos: self.pos

    ClickableLabel:
        text: root.title
        size_hint_x: 1
        size_hint_y: None
        height: 20
        font_size: 18
        on_press: app.select_db(root)
        #color: [0.0,0.0,1.0,1.0] if root.is_selected else [1,1,1,1.0]
    Label:
        text: '登録数：{}\nサイズ：{}MiB'.format(root.data_num,root.data_size)
        font_size: 12

# DataBaseItemsView用
<DBItem@BoxLayout>:
    
    title: ''
    filenum: 0

    fa_source: ''
    
    index: 0 
    is_selected: False
    is_favorite: False

    size_hint: None, None
    height:40
    width: self.minimum_width

    ClickableLabel:
        text: '{}({})'.format(root.title, root.filenum)
        color: [0.0,0.0,1.0,1.0] if root.is_selected else [0.25,0.25,0.25,1.0]
        on_press: app.select_db_item(root)
    
    Image:
        size_hint_x: None
        width: 16
        source: 'data/icons/star.png'
        color: [1.0,0.0,0.0,1.0] if root.is_favorite else [1.0,1.0,1.0,0.0]

<DBItemInitialChar@ToggleButton>:
    text: ''
    font_size: 16
    background_color: 0.6, 0.6, 0.6, 0.8
    group: 'initial_char'
    on_release: app.adapt_ic_filter(self)

<DataEntryLayout@BoxLayout>:
    orientation: 'vertical'

    filenum:0
    datasize:0

    BoxLayout:
        size_hint_y: None
        height: 30
        canvas.before:
            Color:
                rgba: 0.5, 0.25, 0.25, 0.5
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text:'基本情報'
            color: 1.0, 0.0, 0.0, 1
    BoxLayout:
        size_hint_y:None
        height:40
        Label:
            text:'Path: '
            size_hint_x: None
            width: 100
        TextInput:
            id: path_input
            text: ''
            hint_text: 'パスを入力して下さい'
            on_text: self.text = self.text.replace('\n',''); self.text = self.text.replace('\r','')
    BoxLayout:
        size_hint_y:None
        height:40
        Label:
            text:'Title: '
            size_hint_x: None
            width: 100
        TextInput:
            id: title_input
            text: ''
            hint_text: 'タイトルを入力してください'
            on_text: self.text = self.text.replace('\n',''); self.text = self.text.replace('\r','')
        Label:
            text: '頭文字'
            size_hint_x:None
            width: 60
            halign: 'right'
        Button:
            id: ic_btn
            size_hint_x: None
            width: self.height
            text: ''
            on_press: app.select_initial(self)
    BoxLayout:
        size_hint_y:None
        height:40
        Label:
            text:'Link: '
            size_hint_x: None
            width: 100
        TextInput:
            id: link_input
            text: ''
            hint_text: 'リンクするURLを入力してください'
            on_text: self.text = self.text.replace('\n',''); self.text = self.text.replace('\r','')
    BoxLayout:
        size_hint_y:None
        height:40
        Label:
            text:'ファイル数: {}'.format(root.filenum)
        Label:
            text:'サイズ: {:.2f}MiB'.format(root.datasize)
    BoxLayout:
        size_hint_y: None
        height: 30
        canvas.before:
            Color:
                rgba: 0.25, 0.5, 0.25, 0.5
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text:'オプション'
            color: 0, 0.8, 0.4, 1

<TagEntryItem@BoxLayout>:
    text: ''
    #size_hint: None, None
    #size: 150, 50
    size_hint: None, None
    height: 40
    width: self.minimum_width
    CheckBox:
        id: cb
        #color: 0, 0.4, 1.0, 1.0
        size_hint_x: None
        width: '32dp'
        group: 'tecb'
    ClickableLabel:
        on_press: cb._do_press(); app.reflect_tag(self, cb.active)
        text: root.text
# ThumbnailView用
<Thumbnail@BoxLayout>:
    orientation: 'vertical'

    im_source: ''
    fa_source: ''
    ch_source: ''

    im_index: 0 

    is_based: False
    is_selected: False
    is_favorite: False
    is_chapter: False

    size_hint: None, None
    width: 120*app.view_size
    height: 90*app.view_size + 10

    ImageButton:
        id: image
        source: root.im_source
        on_press: app.select_thumbnail(root)
        color: [0.0,0.8,0.6,1.0] if root.is_based else [0.0,0.6,0.8,0.5] if root.is_selected else [1.0,1.0,1.0,1.0]

    GridLayout:
        cols:4
        rows:1
        size_hint_y: None
        height:10
        Image:
            source: root.fa_source
            color: [1.0,0.0,0.0,1.0] if root.is_favorite else [1.0,1.0,1.0,1.0]
        Image: 
            source: root.ch_source
            color: [0.0,0.8,0.4,1.0] if root.is_chapter else [1.0,1.0,1.0,1.0]

<ThumbnailJump@Button>:
    text: ''
    font_size: 16
    background_color: 0.6, 0.6, 0.6, 0.8
    on_press: app.change_thumbnailview(self)

# ImageView用
<MyImage@Image>:
    source: app.image_file_path
    allow_stretch: True
    anim_delay: app.gif_speed
    no_cache: True

<MyBookView@BoxLayout>:

    AnchorLayout:
        anchor_x: 'right'
        Image:
            #pos_hint:{'right':1, 'top':1}
            size_hint_x:1
            size_hint_max_x:self.parent.height*self.image_ratio
            source: app.image_file_path_sub
            allow_stretch: True
            keep_ratio: True
            anim_delay: app.gif_speed
            no_cache: True
    AnchorLayout:
        anchor_x: 'left'
        Image:
            size_hint_x:1
            size_hint_max_x:self.parent.height*self.image_ratio
            source: app.image_file_path
            allow_stretch: True
            keep_ratio: True
            anim_delay: app.gif_speed
            no_cache: True
                
<ImageViewButton@Button>:
    font_size: 16
    color: [0.8,0.8,0.8,0.8] if app.help_on else [0.8,0.8,0.8,0]
    background_color: [0,0.4,0.8,0.5] if app.help_on else [0,0.4,0.8,0.0]

# ポップアップ
<JumpPopUp@BoxLayout>:
	orientation: 'vertical'
    spacing: 10
    
    input_text: ''

    AnchorLayout:
        anchor_x:'center'
        size_hint_y:None
        height: 30
        TextInput:
            text: ''
            hint_text:  '1 - {}'.format(app.page_num)
            on_text: root.input_text = self.text
            multiline: False
 
	BoxLayout:
		orientation: 'horizontal'
		Button:
			size_hint: .5, 1
			text: 'OK'
			on_release: app.jump_thumbnail(root.input_text)
 
		Button:
			size_hint: .5, 1
			text: 'キャンセル'
			on_release: app.close_confirm_popup()

<YesNoPopUp@BoxLayout>:
	orientation: 'vertical'
 
    Label:
        size_hint_y: None
        height: 40
        text: root.text
        font_size: 16
    
    ScrollView:
        id: sv
        Label:
            size_hint_y:None
            text_size: root.width, None
            size: self.texture_size
            text: root.subtext
 
	BoxLayout:
		orientation: 'horizontal'
        size_hint_y: None
        height: 60
 
		Button:
			size_hint: .5, 1
			text: 'はい'
			on_release: root.yes()
		Button:
			size_hint: .5, 1
			text: 'いいえ'
			on_release: root.no()


<SimpleYesNoPopUp@BoxLayout>:
	orientation: 'vertical'
 
    Label:
        text: root.text
        font_size: 16
 
	BoxLayout:
		orientation: 'horizontal'
        size_hint_y: None
        height: 60
 
		Button:
			size_hint: .5, 1
			text: 'はい'
			on_release: root.yes()
		Button:
			size_hint: .5, 1
			text: 'いいえ'
			on_release: root.no()

<SimplePopUp@BoxLayout>:
	orientation: 'vertical'
 
	Label:
		text: root.text
        font_size: 16
    Button:
        size_hint_y: None
        height: 60
        text: '閉じる'
        on_release: root.close()
<OptionalPopup@BoxLayout>:
	orientation: 'vertical'

    text: ''
    cbtext: ''

    Label:
        text: root.text
        font_size: 16

    AnchorLayout:
        anchor_x:'center'
        anchor_y:'center'
        size_hint_y:None
        height:40
        MyCheckBox:
            id: mcb
            text: root.cbtext

	BoxLayout:
		orientation: 'horizontal'
        size_hint_y: None
        height: 60

		Button:
			size_hint: .5, 1
			text: 'はい'
			on_release: root.yes()
		Button:
			size_hint: .5, 1
			text: 'いいえ'
			on_release: root.no()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 40
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Select"
                on_release: root.select(filechooser.path, filechooser.selection)

<ProgressPopUp@BoxLayout>:
	orientation: 'vertical'

    now_title: ''
    now_task: 0
    task_num: 0
    done_file: '-'
    file_num: 0
    done_size: '0'
    all_size:'0'
    remaining_time:0
    speed: '0'
    pb_val: 0

    Label:
        text: 'Title : {} ({}/{})'.format(root.now_title, root.now_task, root.task_num)
        font_size: 16
    Label:
        text: 'ファイル数 : {}/{}'.format(root.done_file, root.file_num)
        font_size: 16
    ProgressBar:
        value: root.pb_val
    Label:
        text: '{}/{}MiB'.format(root.done_size, root.all_size)
        font_size: 14
    Label:
        text: '残り約{}秒 ({}MiB/s)'.format(root.remaining_time, root.speed)
        font_size: 14