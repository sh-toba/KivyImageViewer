#-*- coding: shift-jis -*-
#:kivy 1.10.1

BoxLayout:
	orientation: 'vertical'
    spacing: 10

    Label:
        size_hint_y:None
        height: 40
        valign: 'center'
        text: '既存のデータベースを読み込みます' if app.dbc_load_mode else '新しくデータベースを作成します'
    
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 40
            canvas.before:
                Color:
                    rgba: 0.5, 0.25, 0.25, 0.8
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text:'必須項目'
                color: 1.0, 0.0, 0.0, 1
        BoxLayout:
            size_hint_y:None
            height:40
            Label:
                text:'Title: '
                size_hint_x: None
                width: 100
            TextInput:
                id: title_input
                text: ''
                hint_text: 'タイトルを入力してください'
                on_text: self.text = self.text.replace('\n',''); self.text = self.text.replace('\r','')
        BoxLayout:
            size_hint_y:None
            height:40
            Label:
                text:'Path: '
                size_hint_x: None
                width: 100
            TextInput:
                id: path_input
                text: ''
                hint_text: 'パスを入力してください'
                on_text: self.text = self.text.replace('\n',''); self.text = self.text.replace('\r','')
            Button:
                size_hint_x: None
                width: self.height
                text: ''
                #on_press: app.select_initial(self)
        BoxLayout:
            size_hint_y: None
            height: 40
            canvas.before:
                Color:
                    rgba: 0.25, 0.5, 0.25, 0.8
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                text:'オプション'
                color: 0.6, 0.6, 0.6, 1
        BoxLayout:
            size_hint_y:None
            height:40
            Label:
                text:'タグ設定: '
                size_hint_x: None
                width: 100
            TextInput:
                id: tagtype_input
                text: ''
                hint_text: '追加するタグ種別を入力してください(","区切り)'
                on_text: self.text = self.text.replace('\n',''); self.text = self.text.replace('\r','')
                disabled: app.dbc_load_mode
 
	BoxLayout:
		orientation: 'horizontal'
        size_hint_y:None
        height:40
		Button:
			size_hint: .5, 1
			text: '登録'
			on_release: app.create_db(title_input.text, path_input.text, tagtype_input.text)
 
		Button:
			size_hint: .5, 1
			text: '戻る'
			on_release: app.close_popup()
