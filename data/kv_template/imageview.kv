DataBaseScreen:
    name: 'ImageView'
    fullscreen: True

    BoxLayout:
        orientation:'vertical'

        Image:
            source: app.image_file
        ActionBar:
            height: 40
            ActionView:
                id: av2
                ActionPrevious:
                    title: ''
                    app_icon_width: 0
                    with_previous: False
                ActionButton:
                    text: 'Previous Image'
                    icon: 'data/icons/go_prev.png'
                    on_release: app.go_previous_image()
                ActionLabel:
                    text: '{0}/{1}'.format(app.image_idx+1, app.image_num)

                ActionButton:
                    text: 'Next Image'
                    icon: 'data/icons/go_next.png'
                    on_release: app.go_next_image()
 

