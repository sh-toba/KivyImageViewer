#-*- coding: shift-jis -*-
#:kivy 1.10.1

DataBaseScreen:
    name: 'ImageView'
    fullscreen: True

    BoxLayout:
        orientation:'vertical'

        AnchorLayout:
            anchor_x:'center'
            anchor_y: 'center'

            Image:
                source: app.image_file_path
                allow_stretch: True
                anim_delay: app.gif_speed
                no_cache: True
                
            BoxLayout:
                BoxLayout:
                    orientation:'vertical'
                    size_hint_x: .25
                    ImageViewButton: 
                        size_hint_y: .25
                        text : 'Prev favorite'
                        on_press: app.change_view_image('previous', 'favorite')
                    ImageViewButton: 
                        size_hint_y: .5
                        text : 'Prev'
                        on_press: app.change_view_image('previous')
                    ImageViewButton: 
                        size_hint_y: .25
                        text : 'Prev chapter'
                        on_press: app.change_view_image('previous', 'chapter')
                BoxLayout:
                    orientation:'vertical'
                    size_hint_x: .5
                    ImageViewButton: 
                        size_hint_y: .25
                        text : 'Speed Up'
                        on_press: app.change_anim_speed('up')
                    ImageViewButton: 
                        size_hint_y: .5
                        text : 'FullScreen'
                        on_press: app.change_view_fullscreen()
                    ImageViewButton: 
                        size_hint_y: .25
                        text : 'Speed Down'
                        on_press: app.change_anim_speed('down')
                BoxLayout:
                    orientation:'vertical'
                    size_hint_x: .25
                    ImageViewButton: 
                        size_hint_y: .25
                        text : 'Next favorite'
                        on_press: app.change_view_image('next', 'favorite')
                    ImageViewButton: 
                        size_hint_y: .5
                        text : 'Next'
                        on_press: app.change_view_image('next')
                    ImageViewButton: 
                        size_hint_y: .25
                        text : 'Next chapter'
                        on_press: app.change_view_image('next', 'chapter')

        BoxLayout:
            id: iv_footer
            orientation:'vertical'
            size_hint_y: None
            height: 70
            spacing: 0
            padding: 10
            canvas.before:
                Color:
                    rgba: 0.128, 0.128, 0.128, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            AnchorLayout:
                id: footer
                anchor_x: 'center'
                anchor_y: 'bottom'
                Label:
                    text: app.image_file_name
                    color: [1,1,1,0] if app.hide_menu else [1, 1, 1, 1]
            
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'

                BoxLayout:
                    size_hint_x: None
                    width: 300
                    padding: 0
                    ImageButton:
                        source: 'data/icons/go_prev.png'
                        on_release: app.change_view_image('previous')
                        nocache: True
                    Label:
                        text: '{0}/{1}'.format(app.image_idx+1, app.loaded_file_num)
                        color: [1,1,1,0] if app.hide_menu else [1, 1, 1, 1]
                    ImageButton:
                        source: 'data/icons/go_next.png'
                        on_release: app.change_view_image('next')
                        nocache: True
